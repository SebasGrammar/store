<h2>Users Table</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Zip Code</th>
        </tr>
    </thead>
    <tbody>
        <% products.forEach(product => { %>
        <tr>
            <td>
                <a href="<%= `/products/${product._id}` %>">
                    <%= product.name %>
                </a>
            </td>
            <td><%= product.email %></td>
            <td><%= product.zipCode %></td>
            <td>
                <a href="<%=`/products/${product._id}/edit` %>">
                    Edit
                </a>
            </td>
        </tr>
        <% }); %>
    </tbody>
</table>