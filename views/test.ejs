<div class="body">
  <div class="side-menu">
    <div class="categories">
      <h3>Categorías</h3>
      <ul class="category-names" style="display: flex; flex-direction: column;">
        <li><img src="/images/right-chevron.svg" class="chevron" style="width: 10px" alt=""><a>Skala</a></li>
        <li><img src="/images/right-chevron.svg" class="chevron" style="width: 10px" alt=""><a>Novex</a></li>
        <li><img src="/images/right-chevron.svg" class="chevron" style="width: 10px" alt=""><a>Lorem Ipsum</a></li>
        <li><img src="/images/right-chevron.svg" class="chevron" style="width: 10px" alt=""><a>Lorem Ipsum</a></li>
        <li><img src="/images/right-chevron.svg" class="chevron" style="width: 10px" alt=""><a>Lorem Ipsum</a></li>
      </ul>
    </div>

    <div>
      <h3>Filtrar por precio</h3>
      <input type="range">

    </div>

  </div>


  <div class="c">

    <div class="upper">
      <div class="pic">
        <img src="<%= product.picture %>" alt="" style="width: 310px">
      </div>
      <div class="info">
        <h1><%= product.name %></h1>
        <h1 style="color: #ec88b0">$<%= product.price %></h1>
      </div>
    </div>

    <div>
      <h2 style="color: #ec88b0">Descripción</h2>
      <%= product.description %>
    </div>
  </div>


</div>


<div class="may-like">
  <h2>Quizá te interese</h2>
  <div class="similar-products">
    <% things.forEach(thing => { %>
    <div>
      <a href="<%= `/products/${thing.nameId}` %>"><img style="width: 180px" src="<%= thing.picture %>" alt=""></a>
      <h3><%= thing.name %></h3>
    </div>
    <% }); %>
  </div>
</div>

